<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mriganka.letslearn" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomePage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--Alphabet lesson Activity-->
        <activity
            android:name="._AlphabetLessonActivity"
            android:label="@string/title_activity_alphabet_lesson" >
        </activity>

        <!--Number lesson Activity-->
        <activity
            android:name="._NumberLessonActivity"
            android:label="@string/title_activity_number_lesson" >
        </activity>

        <!--Quiz lesson Activity-->
        <activity
            android:name=".QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>

        <!--Pager Activities-->

        <activity
            android:name="._AlphabetPagerActivity"
            android:label="_AlphabetPagerActivity" >
        </activity>

        <activity
            android:name="._NumberPagerActivity"
            android:label="_NumberPagerActivity" >
        </activity>

    </application>

</manifest>
